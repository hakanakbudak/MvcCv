@using MvcCv.DAL.Entities
@model List<TblDeneyimlerim>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Deneyim Listesi</h1>

<table class="table table-bordered">

	<tr>
		<th>ID</th>
		<th>Şirket</th>
		<th>Pozisyon & Görev</th>
		<th>Açıklama</th>
		<th>Tarih</th>
		<th>Sil</th>
		<th>Düzenle</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ID</td>
			<td>@item.Baslik</td>
			<td>@item.AltBaslik</td>
			<td>@item.Aciklama</td>
			<td>@item.Tarih</td>

			<td>
				<a href="/Deneyim/DeneyimSil/@item.ID" class="btn btn-danger">Sil</a>
			</td>

			<td>
				<a href="/Deneyim/DeneyimGuncelle/@item.ID" class="btn btn-success">Güncelle</a>
			</td>

		</tr>
	}
</table>

<a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>

