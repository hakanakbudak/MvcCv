@model List<TblHobilerim>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Index</h2>
<br />
<form method="post">

	@foreach (var item in Model)
	{

		<label>Açıklama 1</label>
		<textarea rows="5" name="Aciklama1" class="form-control">@item.Aciklama1</textarea>

		<label>Açıklama 2</label>
		<textarea rows="5" name="Aciklama2" class="form-control">@item.Aciklama2</textarea>

	}

	<br />
	<button class="btn btn-success">Güncelle</button>
</form>
