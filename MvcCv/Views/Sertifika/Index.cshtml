@model List<TblSertifikalarım>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
	int index = 0;
}


<section class="content">

	<div class="container-fluid">

		<div class="row">

			<div class="col-md-12">

				<div class="card">

					<div class="card-header p-2">
					</div>


                    <div class="card-body">

                        <a href="/Sertifika/SertifikaEkle/" class="btn btn-primary">Sertifika Ekle</a>

                        <br /><br /><br />

                        <div class="tab-pane" id="timeline">

                            <div class="timeline timeline-inverse">

                                @foreach (var item in Model)
                                {
                                    var buttonClass = (index % 2 == 0) ? "btn-success" : "btn-danger";
                                    index++;

                                    <div class="time-label">
                                        <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn @buttonClass">
                                            @item.Tarih
                                        </a>
                                    </div>

                                    <div>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @item.Aciklama
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>

                        </div>
                    </div>



				</div>

			</div>

		</div>

	</div>

</section>

