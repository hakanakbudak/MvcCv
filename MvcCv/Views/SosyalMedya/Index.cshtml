@using MvcCv.DAL.Entities
@model List<TblSosyalMedya>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">

	<div class="container-fluid">

		<div class="row">

			<div class="col-md-12">

				<div class="card">

					<div class="card-header">
						<h3 class="card-title">SosyalMedya Hesap Listem</h3>
					</div>


					<div class="card-body">

						<button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>

						@* <a href="/SosyalMedya/YeniSosyalMedya/" class="btn btn-info">Yeni SosyalMedya Hesabı Ekle</a> *@
						<br />
						<br />

						<table class="table table-bordered">

							<thead>
								<tr>
									<th style="width: 10px">#</th>
									<th>Sosyal Medya</th>
									<th>Link</th>
									<th>Düzenle</th>
									<th>Sil</th>
								</tr>
							</thead>

							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ID</td>
										<td>@item.Ad</td>
										<td>@item.Link</td>

										<td>
											<a class="btn btn-info btn-sm" href="/SosyalMedya/SosyalMedyaGuncelle/@item.ID">
												<i class="fas fa-pencil-alt">
												</i>
												Düzenle
											</a>
										</td>

										<td>
											<a class="btn btn-danger btn-sm" href="/SosyalMedya/SosyalMedyaSil/@item.ID">
												<i class="fas fa-trash">
												</i>
												Sil
											</a>
										</td>

									</tr>
								}

							</tbody>

						</table>

					</div>

				</div>

			</div>

		</div>

	</div>

</section>

<div class="modal" id="Modal1">

	<div class="modal-dialog">

		<div class="modal-content">

			<div class="modal-header">
				<h2 class="modal-title">Sosyal Medya Hesabı Ekleme Paneli</h2>
			</div>

			<form method="post" action="/SosyalMedya/Ekle">
				<div class="modal-body">

					<label>Sosyal Medya Icon</label>
					<input type="text" name="Ad" class="form-control" />
					<br />
					<label>Sosyal Medya Link</label>
					<input type="text" name="Link" class="form-control" />
					<br />
					<button class="btn btn-info">Kaydet</button>
				</div>
			</form>

		</div>

	</div>

</div>


